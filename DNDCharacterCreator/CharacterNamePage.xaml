<Page x:Class="DNDCharacterCreator.CharacterNamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DNDCharacterCreator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CharacterNamePage">

    <Grid Background="SlateGray">
        <StackPanel HorizontalAlignment="Center" Margin="0,10,0,10">

            <Label FontSize="14" HorizontalAlignment="Center" Margin="0,15,0,15">Please Insert Your Character's Name:</Label>
            <TextBox x:Name="CharacterNameTxt"></TextBox>
            <Label FontSize="14" HorizontalAlignment="Center" Margin="0,15,0,15">Please Insert Your Player's Name:</Label>
            <TextBox x:Name="PlayerNameTxt"></TextBox>

            <Button Margin="40,20,40,20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="AddNames" >Continue</Button>
        </StackPanel>
        
    </Grid>
</Page>
