<Window x:Class="DNDCharacterCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNDCharacterCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    
    <Grid>
        
            <StackPanel HorizontalAlignment="Center">
                <Label FontSize="52" HorizontalAlignment="Center">Testing</Label>
                <Label FontSize="10">This first test is to test the find and replace function for one word in the assigned pdf</Label>
                <TextBox  Name="TestInputText" HorizontalAlignment="Center" Width="150" TextWrapping="Wrap" Margin="20, 20"/>
            <Button HorizontalAlignment="Center" Width="100" Background="MediumSlateBlue" Foreground="Black" Margin="20,20" Click="TestReplace">Test</Button>
            <Label FontSize="12" Name="testOutput" HorizontalAlignment="Center" Width="200" Height="20"/>
        </StackPanel>
        
    </Grid>
</Window>
