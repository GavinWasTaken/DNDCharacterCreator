<Page x:Class="DNDCharacterCreator.EquipmentSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DNDCharacterCreator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EquipmentSelection">

    <Grid Background="LightSlateGray">
        <StackPanel Orientation="Vertical">
            <StackPanel x:Name="Weapons" Orientation="Vertical" HorizontalAlignment="Center">
                <Label Margin="0, 10, 0, 10" FontSize="32" FontWeight="Bold">Choose Your Equipment!</Label>

                <StackPanel Orientation="Horizontal">
                    <Label FontSize="15" FontWeight="Bold">Sword</Label>
                    <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="SwordChkBx"></CheckBox>
                </StackPanel>
            </StackPanel>
            
            
        </StackPanel>
    </Grid>
</Page>
