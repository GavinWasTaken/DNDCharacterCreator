<Page x:Class="DNDCharacterCreator.ClassSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DNDCharacterCreator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClassSelectionPage">

    <Grid Background="DarkSeaGreen">
        <StackPanel HorizontalAlignment="Center" Margin="0,10, 0, 20">
            <Label HorizontalAlignment="Center" Margin="0, 15,0,15" FontSize="24">Please Choose A Class</Label>
            <TextBox x:Name="classSelectiontxt" HorizontalAlignment="Stretch" Margin="20, 40, 20, 20"></TextBox>
            
            <Button HorizontalAlignment="Stretch" Margin="80,0,80,0" Click="ClassSelection">Continue</Button>
        </StackPanel>
    </Grid>
</Page>
